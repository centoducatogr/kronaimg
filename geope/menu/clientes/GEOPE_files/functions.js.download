function GridJquery(objeto) {

    if ($.fn.dataTable.isDataTable(objeto)) {
        $(objeto).DataTable();
    } else {


        $(objeto).DataTable(
            {
                bLengthChange: true,
                lengthMenu: [[10, 15, 25, 50, -1], [10, 15, 25, 50, "Todos"]],
                bFilter: true,
                bSort: true,
                bPaginate: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/pt-BR.json'
                }
            });
    }
    
}

function openNewTab(url) {
    window.open(url, '_blank');

    return false;
}

function filtraTabela(id) {
    // Declare variables
    var input, filter, table, tr, td, i, txtValue;
    input = document.querySelector("[onkeyup]");
    filter = input.value.toUpperCase();
    table = document.getElementById(id);
    tr = table.getElementsByTagName("tr");

    // Loop through all table rows, and hide those who don't match the search query
    for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[1];
        if (td) {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
        }
    }
}




function setMask() {

    try {

        let valor = $(".valor");
        VMasker(valor).maskMoney();

        let data = $(".data");
        VMasker(data).maskPattern('99/99/9999');

        let placa = $(".placa");
        VMasker(placa).maskPattern('SSS-SSSS');

        let cpf = $(".cpf");
        VMasker(cpf).maskPattern('999.999.999-99');

        let ano = $(".ano");
        VMasker(ano).maskPattern("9999");

        let cep = $(".cep");
        VMasker(cep).maskPattern("99999-999");

        let telefone = $(".celular");
        VMasker(telefone).maskPattern("(99)99999-9999");

        let numero = $(".numero");
        VMasker(numero).maskPattern('999999999999999');

        var dataHora = $(".hora-data");
        VMasker(dataHora).maskPattern("99/99/9999 99:99:99");

        var hora = $(".hora");
        VMasker(hora).maskPattern("99:99:99");

        var HoraMinuto = $(".HoraMinuto");
        VMasker(HoraMinuto).maskPattern("99:99");
        
    }catch (err){
    }

    

}

